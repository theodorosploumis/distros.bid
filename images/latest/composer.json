{
    "name": "drupal8/distros",
    "type": "project",
    "description": "Project based on drupal/recommended-project, See manual at drupal.org/node/2718229",
    "homepage": "https://www.drupal.org/project/drupal",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drush/drush": "^10.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "topfloor/composer-cleanup-vcs-dirs": "^1.0",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "/var/www/html"
            },
            "file-mapping": {
                "[web-root]/sites/default/default.services.yml": false,
                "[web-root]/sites/default/default.settings.php": false
            }
        },
        "installer-paths": {
            "/var/www/html/core": [
                "type:drupal-core"
            ],
            "/var/www/html/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "/var/www/html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "/var/www/html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "/var/www/html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "/var/www/html/drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "/var/www/html/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "/var/www/html/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "patches": {}
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "rm -f web/.gitignore web/example.gitignore",
            "find . -mindepth 2 -type d -name .git | xargs rm -rf"
        ]
    },
    "support": {
        "chat": "https://www.drupal.org/node/314178",
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html"
    }
}